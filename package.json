{
  "name": "chia-the-thuong",
  "version": "1.0.0",
  "description": "Modern Japanese learning app focused on casual form (普通形) conversion with beautiful UI and comprehensive features",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "live-server --port=8080 --open=/index.html --watch=. --wait=200",
    "start": "npm run dev",
    "preview": "serve . -l 3000",
    "build": "npm run validate && npm run minify",
    "validate": "npm run validate:html && npm run validate:js && npm run validate:json",
    "validate:html": "html-validate index.html",
    "validate:js": "eslint assets/js/**/*.js",
    "validate:json": "node scripts/validate-json.js",
    "minify": "npm run minify:js && npm run minify:css",
    "minify:js": "terser assets/js/**/*.js -o dist/app.min.js",
    "minify:css": "echo 'Using Tailwind CDN - no CSS to minify'",
    "format": "prettier --write \"**/*.{js,html,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,html,json,md}\"",
    "lint": "eslint assets/js/**/*.js",
    "lint:fix": "eslint assets/js/**/*.js --fix",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest tests/unit/",
    "test:integration": "jest tests/integration/",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "docs": "jsdoc assets/js/**/*.js -d docs/",
    "analyze": "npm run analyze:bundle && npm run analyze:lighthouse",
    "analyze:bundle": "webpack-bundle-analyzer dist/",
    "analyze:lighthouse": "lighthouse http://localhost:8080 --output html --output-path ./reports/lighthouse.html",
    "deploy": "npm run build && npm run deploy:gh-pages",
    "deploy:gh-pages": "gh-pages -d .",
    "deploy:netlify": "netlify deploy --prod --dir .",
    "deploy:vercel": "vercel --prod",
    "backup": "node scripts/backup-data.js",
    "restore": "node scripts/restore-data.js",
    "check:links": "linkinator index.html --recurse",
    "check:deps": "npm audit && npm outdated",
    "update:deps": "npm update",
    "clean": "rimraf dist/ reports/ coverage/ docs/",
    "reset": "npm run clean && npm install",
    "precommit": "npm run format && npm run lint && npm run validate",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/henrylenguyen/chia-the-thuong.git"
  },
  "keywords": [
    "japanese",
    "learning",
    "education",
    "language",
    "quiz",
    "casual-form",
    "普通形",
    "tailwind",
    "vanilla-js",
    "pwa",
    "responsive",
    "dark-mode"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://yourwebsite.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/henrylenguyen/chia-the-thuong/issues"
  },
  "homepage": "https://github.com/henrylenguyen/chia-the-thuong#readme",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^46.0.0",
    "gh-pages": "^6.1.0",
    "html-validate": "^8.7.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "^4.0.2",
    "lighthouse": "^11.4.0",
    "linkinator": "^4.1.0",
    "live-server": "^1.2.2",
    "netlify-cli": "^17.0.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "serve": "^14.2.1",
    "terser": "^5.26.0",
    "vercel": "^32.7.0",
    "webpack-bundle-analyzer": "^4.10.0"
  },
  "dependencies": {},
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "assets/js/**/*.js",
      "!assets/js/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "jsdoc"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error",
      "jsdoc/require-description": "warn",
      "jsdoc/require-param": "warn",
      "jsdoc/require-returns": "warn"
    },
    "globals": {
      "tailwind": "readonly"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "pre-push": "npm run test"
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "index.html",
    "assets/",
    "questions.json",
    "answers.json",
    "README.md",
    "LICENSE"
  ],
  "pwa": {
    "name": "Japanese Learning App",
    "short_name": "JPLearn",
    "description": "Learn Japanese casual form conversion",
    "theme_color": "#667eea",
    "background_color": "#ffffff",
    "display": "standalone",
    "start_url": "/",
    "icons": [
      {
        "src": "assets/icons/icon-192.png",
        "sizes": "192x192",
        "type": "image/png"
      },
      {
        "src": "assets/icons/icon-512.png",
        "sizes": "512x512",
        "type": "image/png"
      }
    ]
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/henrylenguyen"
  }
}
